---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Coding tutorials for learning web development" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<div class="nav-content">
				<a href="/" class="logo">üë©‚Äçüíª Chicas Code</a>
				<div class="nav-links">
					<a href="/">Home</a>
					<a href="/about">About</a>
					<a href="/resources">Resources</a>
				</div>
			</div>
		</nav>
		<slot />
		<footer>
			<p>Made with ‚ù§Ô∏è for my daughters | ¬© 2025</p>
		</footer>
