<style>
	.resources-page {
		max-width: 1000px;
		margin: 0 auto;
		padding: 3rem 1rem;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
		text-align: center;
	}

	.content {
		line-height: 1.8;
	}

	.content > p {
		text-align: center;
		font-size: 1.2rem;
		color: #555;
		margin-bottom: 3rem;
	}

	.resource-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.resource-card {
		background: white;
		border: 2px solid #f0f0f0;
		border-radius: 12px;
		padding: 2rem;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
	}

	.resource-card:hover {
		border-color: var(--primary);
		box-shadow: 0 8px 20px rgba(255, 107, 157, 0.15);
		transform: translateY(-4px);
	}

	.resource-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--text);
	}

	.resource-card p {
		color: #666;
		margin-bottom: 1.5rem;
		flex-grow: 1;
	}

	.resource-card a {
		display: inline-block;
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		transition: color 0.3s;
	}

	.resource-card a:hover {
		color: var(--secondary);
	}
</style>
