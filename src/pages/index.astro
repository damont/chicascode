---
import Layout from '../layouts/Layout.astro';
import TutorialCard from '../components/TutorialCard.astro';
---

<Layout title="Chicas Code - Learn to Code">
	<main>
		<div class="hero">
			<h1>ðŸŽ¨ Welcome to <span class="text-gradient">Chicas Code</span></h1>
			<p class="subtitle">
				Fun coding tutorials for my amazing daughters!
			</p>
		</div>

		<section class="tutorials">
			<h2>Tutorials</h2>
			<div class="tutorial-grid">
				<TutorialCard
					title="Python: Getting Started"
					description="Set up VS Code for Python, create a uv virtual environment, and run Hello World"
					link="/tutorials/getting-started"
				/>
				<TutorialCard
					title="APIs with FastAPI"
					description="Build a Hello World API that greets you by name"
					link="/tutorials/html-css"
				/>
				<TutorialCard
					title="Store API + Local Database"
					description="Store products in a local NoSQL database and access everything through your API"
					link="/tutorials/javascript"
				/>
				<TutorialCard
					title="Storefront UI"
					description="Add a simple UI to search products and buy them through your API"
					link="/tutorials/react"
				/>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		max-width: 1200px;
	}

	.hero {
		text-align: center;
		padding: 3rem 1rem;
	}

	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
		line-height: 1.2;
	}

	.text-gradient {
		background-image: linear-gradient(45deg, #ff6b9d, #c06bff, #4d9fff);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		animation: gradient 8s ease infinite;
	}

	@keyframes gradient {
		0%, 100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	.subtitle {
		font-size: 1.5rem;
		color: #666;
		margin-top: 1rem;
	}

	.tutorials {
		margin-top: 3rem;
	}

	.tutorials h2 {
		font-size: 2rem;
		margin-bottom: 2rem;
		text-align: center;
	}

	.tutorial-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		padding: 1rem;
	}
</style>
